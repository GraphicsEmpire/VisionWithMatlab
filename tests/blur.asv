if isoctave()     pkg load image;else     import image;endclose all;[path, name, ext] = fileparts(mfilename('fullpath'));path = fullfile(path, '/../data/');str = sprintf('FULLPATH to data: [%s]', path);disp(str);% load imageimg=imread(fullfile(path, 'butterfly.jpg'));% gen noisenoise_sigma = 40;noise = uint8(randn(size(img)) .* noise_sigma);img_noiseadded = img + noise;figure;imshow(img_noiseadded);% create blur filterfilter_size = 31;filter_sigma = 5;blur_kernel = fspecial('gaussian', filter_size, filter_sigma);figure;% apply filter with various edge optionsimg_noiseblurred = imfilter(img_noiseadded, blur_kernel, 0);xlabel('black edges');imshow(img_noiseblurred);pause(2);img_noiseblurred = imfilter(img_noiseadded, blur_kernel, 'circular');xlabel('black edges');imshow(img_noiseblurred);pause(2);img_noiseblurred = imfilter(img_noiseadded, blur_kernel, 'replicate');imshow(img_noiseblurred);pause(2);